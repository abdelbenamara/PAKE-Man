{
  "name": "@pake-man/backend",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "prepare": "[ \"production\" = \"${NODE_ENV}\" ] || ./scripts/setup.sh",
    "lint": "prettier . --write && eslint . --fix",
    "clean": "rm -rf dist/",
    "fclean": "npm run clean && rm -rf node_modules/ && rm -rf data/",
    "build": "npm run lint && prisma migrate dev --name init && cp src/public/* dist/ && tsc",
    "test": "echo 'Error: no test specified' && exit 1",
    "dev": "concurrently -k -n 'tsc,node' -c 'yellow.bold,cyan.bold' 'tsc -w' 'node --watch dist/server.js'",
    "debug": "node --inspect dist/server.js",
    "start": "node dist/server.js"
  },
  "imports": {
    "#*": "./dist/*",
    "#generated/prisma": "./dist/generated/prisma/index.js"
  },
  "dependencies": {
    "@fastify/autoload": "~6.3.1",
    "@fastify/cors": "~11.0.1",
    "@fastify/etag": "~6.0.3",
    "@fastify/helmet": "~13.0.1",
    "@fastify/jwt": "~9.1.0",
    "@fastify/one-line-logger": "~2.0.2",
    "@fastify/routes-stats": "~4.0.2",
    "@fastify/sensible": "~6.0.3",
    "@fastify/swagger": "~9.5.1",
    "@joggr/fastify-prisma": "~6.0.0",
    "@prisma/adapter-better-sqlite3": "~6.12.0",
    "@prisma/client": "~6.12.0",
    "@scalar/fastify-api-reference": "~1.32.7",
    "close-with-grace": "~2.2.0",
    "dotenv": "~17.2.0",
    "fastify": "~5.4.0",
    "fastify-plugin": "~5.0.1",
    "nodemailer": "~7.0.5",
    "otpauth": "~9.4.0"
  },
  "devDependencies": {
    "@types/node": "~24.0.14",
    "@types/nodemailer": "~6.4.17",
    "eslint-config-prettier": "~10.1.5",
    "neostandard": "~0.12.2",
    "prettier-plugin-prisma": "~5.0.0",
    "prisma": "~6.12.0"
  }
}
