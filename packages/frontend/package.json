{
  "name": "@pake-man/frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "prepare": "[ \"production\" = \"${NODE_ENV}\" ] || ./scripts/setup.sh",
    "lint": "prettier . --write && eslint . --fix",
    "build": "npm run lint && tsc --project src/client && vite build && tsc && cp -r src/views dist",
    "test": "echo 'Error: no test specified' && exit 1",
    "dev": "concurrently -k -n 'tsc(client),tsc(server),vite,node' -c 'yellow.dim,yellow.bold,magenta.bold,cyan.bold' 'tsc --project src/client -w' 'tsc -w' 'vite build --emptyOutDir false -w' 'node --watch dist/server.js'",
    "debug": "node --inspect dist/server.js",
    "start": "node dist/server.js"
  },
  "imports": {
    "#*": "./dist/*"
  },
  "dependencies": {
    "@fastify/autoload": "~6.3.1",
    "@fastify/cookie": "~11.0.2",
    "@fastify/cors": "~11.0.1",
    "@fastify/etag": "~6.0.3",
    "@fastify/formbody": "~8.0.2",
    "@fastify/helmet": "~13.0.1",
    "@fastify/one-line-logger": "~2.0.2",
    "@fastify/sensible": "~6.0.3",
    "@fastify/static": "~8.2.0",
    "close-with-grace": "~2.2.0",
    "cross-fetch": "~4.1.0",
    "dotenv": "~17.1.0",
    "fastify": "~5.4.0",
    "fastify-html": "~0.7.1",
    "ghtml": "~3.1.3",
    "htmx.org": "~2.0.6"
  },
  "devDependencies": {
    "@babylonjs/core": "~8.15.1",
    "@babylonjs/inspector": "~8.15.1",
    "@tailwindcss/postcss": "~4.1.11",
    "@types/node": "~24.0.10",
    "eslint-config-prettier": "~10.1.5",
    "neostandard": "~0.12.2",
    "postcss": "~8.5.6",
    "postcss-load-config": "~6.0.1",
    "prettier-plugin-tailwindcss": "~0.6.13",
    "tailwindcss": "~4.1.11",
    "vite": "~7.0.3",
    "vite-tsconfig-paths": "~5.1.4"
  }
}
